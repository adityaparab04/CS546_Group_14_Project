<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <p class="welcome">Enter the details to signup</p>
                <br>
                {{#if error}}
                <div class="alert alert-danger col-4 offset-4" role="alert">
                    <h4 class="alert-heading">Error!</h4>
                    <p>{{error}}</p>
                </div>
                {{/if}}

                <form id="signup-form" method="post" action="/users/signup"
                    onsubmit="return validateSignupInputs(event);">
                    <div class="form-group">
                        <p class="noPost" for="text1">Username:</p>
                        <input type="text" class="form-control" id="username" name="username"
                            placeholder="Your username eg. group@14" />
                        <br>
                        <p class="noPost" for="text1">Email:</p>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Your Email" />
                        <br>
                        <p class="noPost" for="text1">Age:</p>
                        <input type="number" class="form-control" id="age" name="age" placeholder="Your Age" />
                        <br>
                        <p class="noPost" for="text1">Password:</p>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Your password" />
                        <br>
                        <p class="noPost" for="text1">Confirm Password:</p>
                        <input type="password" class="form-control" id="confirm-password" name="confirm-password"
                            placeholder="Confirm your password" />
                        <br>
                        <div class="form-group">
                            <input type="submit" class="btn AllButton btn-outline-success" value="Sign Up" />
                        </div>
                        {{#unless status}}
                        <p class="wrongMsg">{{message}}</p>
                        {{/unless}}
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
</body>